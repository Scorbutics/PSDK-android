<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/psdkLocationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Archive location"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/psdkLocation"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Path to project.psa"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <CheckedTextView
        android:id="@+id/psdkLocationValid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="@drawable/check_mark"
        android:checked="true"
        android:text="PSDK Location validity" />

    <Button
        android:id="@+id/locatePSDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locate PSDK archive" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project compatibility errors" />

        <TextView
            android:id="@+id/projectEngineHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/compileGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start compilation" />

</LinearLayout>
